{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"${workspaceFolder}/build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "silent", // Ne pas changer automatiquement le focus
				"focus": false, // Ne pas mettre le focus sur le terminal
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}